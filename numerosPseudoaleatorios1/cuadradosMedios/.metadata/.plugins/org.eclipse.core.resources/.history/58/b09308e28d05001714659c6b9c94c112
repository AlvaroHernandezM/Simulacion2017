package test;

import javax.swing.JOptionPane;

import logic.CuadradosMedios2;
import presentation.Pintar;

public class Test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		CuadradosMedios2 cuadradosMedios = new CuadradosMedios2(Integer.valueOf(JOptionPane.showInputDialog("Semilla: ")), Integer.valueOf(JOptionPane.showInputDialog("Nùmero de dìgitos a tomar: ")));
		double value;
		int i=0;
		do{
			i++;
			value = cuadradosMedios.calcularSemila();
			System.out.println("Resultado "+i+" = "+value+" - Semilla: "+cuadradosMedios.getSemilla());
		} while(value>0);
		System.out.println("***************************************");
		System.out.println("Promedio: "+cuadradosMedios.promedio(cuadradosMedios.getHistorial()));
		System.out.println("***************************************");
		System.out.println("Varianza: "+cuadradosMedios.varianza(cuadradosMedios.getHistorial()));
		System.out.println("***************************************");		
		int histo[] = cuadradosMedios.histograma(cuadradosMedios.getHistorial(), Integer.valueOf(JOptionPane.showInputDialog("Rango histograma: ")));
		for (int j = 0; j < histo.length; j++) {
			System.out.println((double)j/(double)50 + " a " + (double)(j+1)/(double)50 + ": "+histo[j]);
		}
	    Pintar pintar = new Pintar(histo); 
	}

}
